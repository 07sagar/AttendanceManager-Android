<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="production.rts.attendancemanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pen2x"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pen2x"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AttendanceActivity" />
        <activity android:name=".AttendanceViewer" />
        <activity android:name=".TimeTableActivity" />
        <activity android:name=".NotesActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".NotesViewerActivity" />
        <activity android:name=".ViewAttendance" />
        <activity android:name=".ViewClass"></activity>
    </application>

</manifest>