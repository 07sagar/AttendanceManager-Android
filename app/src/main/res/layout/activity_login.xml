<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333B46">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@id/imageView"
        android:id="@+id/textview1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attendance Manager"
        android:textColor="@android:color/white"
        android:layout_below="@id/textview1"
        android:id="@+id/textview2"
        android:textAlignment="center"/>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1"
        android:layout_below="@+id/textview2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/peopleoutline"
                android:background="#2D333A"
                />
            <EditText
                android:id="@+id/idTextField"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Email ID"
                android:textColorHint="@android:color/white"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:background="#3D4751"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/cardView2"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/lock"
            android:background="#2D333A"
            />
            <EditText
                android:id="@+id/passwordText"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="#3D4751"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressIndicator"
        android:layout_margin="5dp"
        />
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressIndicator"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="LOGIN"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="#FFB900"/>

    <android.support.v7.widget.CardView
        android:id="@+id/noAccountText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/loginbtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#3D4751">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#3D4751"
                android:text="Register"
                android:textAlignment="center"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/registerbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="85dp"
                android:background="#FFB900"
                android:text=">>"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>